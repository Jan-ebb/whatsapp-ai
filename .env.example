# WhatsApp MCP Server Configuration
# Copy this file to .env and fill in your values

# Required: Encryption passphrase for WhatsApp credentials (min 8 characters)
# This protects your WhatsApp session data stored locally
WHATSAPP_PASSPHRASE=

# Optional: Path to store data (default: ./store)
# WHATSAPP_STORE_PATH=./store

# Optional: Require confirm flag for write operations (default: true)
# Set to false to skip confirmation prompts
# WHATSAPP_REQUIRE_CONFIRMATION=true

# Optional: Maximum messages returned per query (default: 50)
# WHATSAPP_MAX_MESSAGES=50

# Optional: Maximum chats returned per query (default: 100)
# WHATSAPP_MAX_CHATS=100

# Optional: Rate limit - requests per minute (default: 60)
# WHATSAPP_RATE_LIMIT=60

# Optional: Session idle timeout in minutes (default: 30)
# WHATSAPP_IDLE_TIMEOUT=30

# Optional: Log level - none, errors, or operations (default: errors)
# WHATSAPP_LOG_LEVEL=errors
